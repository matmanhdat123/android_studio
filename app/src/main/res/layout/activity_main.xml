<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/slate"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">


    <Button
            android:text="@string/button_login"
            android:textColor="@color/white"
            android:background="@color/denim"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height" tools:layout_editor_absoluteY="@dimen/button_absoluteY"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/all_margin"
            android:layout_marginRight="@dimen/all_margin" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/all_margin" android:layout_marginStart="@dimen/all_margin"/>
    <EditText
            android:layout_width="@dimen/email_pass_width"
            android:text="@string/screen_login_email"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_height="@dimen/edittext_height"
            android:inputType="textEmailAddress"
            android:ems="10"
            tools:layout_editor_absoluteX="@dimen/email_login_absoluteX" android:id="@+id/editText"
            app:layout_constraintBottom_toTopOf="@id/editText2"/>
    <EditText
            android:layout_width="@dimen/email_pass_width"
            android:text="@string/screen_login_pass"
            android:textColor="@color/white"
            android:layout_height="@dimen/edittext_height"
            android:textAlignment="center"
            android:inputType="numberPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="@dimen/pass_absoluteY" tools:layout_editor_absoluteX="@dimen/email_login_absoluteX" android:id="@+id/editText2"/>
    <TextView
            android:text="@string/screen_forgot"
            android:textColor="@color/purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="@dimen/forgot_absoluteY"
            tools:layout_editor_absoluteX="@dimen/forgot_absoluteX" android:id="@+id/textView"/>
    <TextView
            android:text="@string/screen_signin"
            android:textColor="@color/purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="@dimen/sigin_absoluteY"
            tools:layout_editor_absoluteX="@dimen/screen_signin_absoluteX" android:id="@+id/textView2"/>
    <TextView
            android:text="@string/button_signin"
            android:textColor="@color/lavender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="@dimen/sigin_absoluteY"
            tools:layout_editor_absoluteX="@dimen/button_signin_absoluteX" android:id="@+id/textView3"/>
    <ImageView
            android:layout_width="@dimen/lock_letter_width"
            android:layout_height="@dimen/lock_letter_height" app:srcCompat="@mipmap/ic_launcher_lock"
            tools:layout_editor_absoluteY="@dimen/lock_absoluteY" tools:layout_editor_absoluteX="@dimen/lock_letter_absoluteX" android:id="@+id/imageView"/>
    <ImageView
            android:layout_width="@dimen/lock_letter_width"
            android:layout_height="@dimen/lock_letter_height" app:srcCompat="@mipmap/ic_launcher_letter"
            tools:layout_editor_absoluteY="@dimen/letter_absoluteY" tools:layout_editor_absoluteX="@dimen/lock_letter_absoluteX" android:id="@+id/imageView2"/>
    <ImageView
            android:layout_width="@dimen/kombini_width"
            android:layout_height="@dimen/kombini_height" app:srcCompat="@mipmap/ic_launcher_komlini"
            android:id="@+id/imageView3" android:layout_marginBottom="@dimen/all_margin"
            app:layout_constraintBottom_toTopOf="@+id/editText" android:layout_marginTop="@dimen/all_margin"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/all_margin" android:layout_marginRight="@dimen/all_margin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="@dimen/all_margin"
            android:layout_marginStart="@dimen/all_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>